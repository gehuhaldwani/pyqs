---
import {
	SOCIALS,
	MAINTAINER_NAME,
	MAINTAINER_COURSE,
	MAINTAINER_BATCH,
} from "@/consts";
import { Icon } from "astro-iconify";

const SITE_BASE = import.meta.env.BASE_URL;
const date = new Date();
---

<footer class="border-t m-5">
	<div class="max-w-screen-md mx-auto my-10 flex flex-col justify-center">
		<div class="flex gap-4 pb-8 mb-5 flex-col lg:flex-row">
			<div class="w-full lg:w-2/3">
				<h1 class="text-lg font-bold mb-4">
					Maintained by
					{MAINTAINER_NAME}
					<br />
					( {MAINTAINER_COURSE}
					{MAINTAINER_BATCH} )
				</h1>
				<p class="text-sm">
					A collection of student contributed previous year question
					papers for Graphic Era Hill University semester
					examinations. This is a community driven project and we
					encourage you to contribute to the project by adding more
					question papers.
				</p>
				<div class="flex gap-4 mt-3">
					{
						SOCIALS.map((social) => (
							<a href={social.url} target="_blank">
								<Icon
									name={social.iconify}
									class="w-5 h-5 text-gray-600 hover:text-gray-500 dark:text-neutral-200"
								/>
							</a>
						))
					}
				</div>
			</div>
			<div class="flex lg:ml-auto gap-10 mt-1">
				<div>
					<h1 class="font-bold mb-3 text-base">Quick Links</h1>
					<ul class="flex flex-col gap-2 text-sm">
						<li>
							<!-- Place this tag where you want the button to render. -->
							<a
								class="github-button"
								href="https://github.com/gehuhaldwani/pyqs"
								data-color-scheme="no-preference: light; light: light; dark: dark;"
								data-size="large"
								aria-label="Star gehuhaldwani/pyqs on GitHub"
								>Star on GitHub</a
							>
							<!-- Place this tag in your head or just before your close body tag. -->
							<script
								is:inline
								async
								defer
								src="https://buttons.github.io/buttons.js"
							></script>
						</li>
						<li>
							<a
								href="https://discord.gg/ZdNcYFZnrB"
								class="flex items-center gap-1 hover:no-underline hover:text-gray-600"
								>Join Discord<Icon
									name="radix-icons:arrow-top-right"
									class="w-3 h-3"
								/></a
							>
						</li>
						<li>
							<a
								href={SITE_BASE + "contribute/"}
								class="flex items-center gap-1 hover:no-underline hover:text-gray-600"
								>Contribute<Icon
									name="radix-icons:arrow-top-right"
									class="w-3 h-3"
								/></a
							>
						</li>
						<li>
							<a
								href={SITE_BASE + "about/"}
								class="flex items-center gap-1 hover:no-underline hover:text-gray-600"
								>About <Icon
									name="radix-icons:arrow-top-right"
									class="w-3 h-3"
								/></a
							>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<p class="text-sm font-medium mb-10">
			This site was last updated on {date.toDateString()} at {
				date.toTimeString()
			}.
		</p>
	</div>
</footer>
