---
import Header from "@/components/ui/Header.astro";
import BaseLayout from "./BaseLayout.astro";
import type { Props } from "@/components/partials/Head.astro";
import Footer from "@/components/ui/Footer.astro";
---

<BaseLayout {...Astro.props}>
	<Header transition:name="page-header" />

	<main
		class="w-full max-w-screen-lg mx-auto p-10"
		transition:name="page-content"
	>
		<slot />
	</main>

	<Footer transition:name="page-footer" />
</BaseLayout>

<style>
	body {
		display: flex;
		flex-direction: column;
	}
	header {
		flex: 0 0 auto;
	}
	main {
		flex: 1 1 auto;
	}
	footer {
		flex: 0 0 auto;
	}
</style>
